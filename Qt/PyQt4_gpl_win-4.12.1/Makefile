
all:
	@(cd qpy; $(MAKE))
	@(cd QtCore; $(MAKE))
	@(cd QtGui; $(MAKE))
	@(cd QtMultimedia; $(MAKE))
	@(cd QtNetwork; $(MAKE))
	@(cd QtDBus; $(MAKE))
	@(cd QtOpenGL; $(MAKE))
	@(cd QtSql; $(MAKE))
	@(cd QtSvg; $(MAKE))
	@(cd QtTest; $(MAKE))
	@(cd QtWebKit; $(MAKE))
	@(cd QtXml; $(MAKE))
	@(cd QtXmlPatterns; $(MAKE))
	@(cd Qt; $(MAKE))
	@(cd dbus; $(MAKE))
	@(cd pyuic; $(MAKE))
	@(cd pylupdate; $(MAKE))
	@(cd pyrcc; $(MAKE))

install:
	@(cd qpy; $(MAKE) install)
	@(cd QtCore; $(MAKE) install)
	@(cd QtGui; $(MAKE) install)
	@(cd QtMultimedia; $(MAKE) install)
	@(cd QtNetwork; $(MAKE) install)
	@(cd QtDBus; $(MAKE) install)
	@(cd QtOpenGL; $(MAKE) install)
	@(cd QtSql; $(MAKE) install)
	@(cd QtSvg; $(MAKE) install)
	@(cd QtTest; $(MAKE) install)
	@(cd QtWebKit; $(MAKE) install)
	@(cd QtXml; $(MAKE) install)
	@(cd QtXmlPatterns; $(MAKE) install)
	@(cd Qt; $(MAKE) install)
	@(cd dbus; $(MAKE) install)
	@(cd pyuic; $(MAKE) install)
	@(cd pylupdate; $(MAKE) install)
	@(cd pyrcc; $(MAKE) install)
	@test -d $(DESTDIR)/usr/lib/python3.6/site-packages/PyQt4 || mkdir -p $(DESTDIR)/usr/lib/python3.6/site-packages/PyQt4
	cp -f /home/rodrigo/Documents/Ajedrez/Qt/PyQt4_gpl_win-4.12.1/__init__.py $(DESTDIR)/usr/lib/python3.6/site-packages/PyQt4/__init__.py
	cp -f pyqtconfig.py $(DESTDIR)/usr/lib/python3.6/site-packages/PyQt4/pyqtconfig.py
	@test -d $(DESTDIR)/usr/share/qt/qsci/api/python || mkdir -p $(DESTDIR)/usr/share/qt/qsci/api/python
	cp -f PyQt4.api $(DESTDIR)/usr/share/qt/qsci/api/python/PyQt4.api

clean:
	@(cd qpy; $(MAKE) clean)
	@(cd QtCore; $(MAKE) clean)
	@(cd QtGui; $(MAKE) clean)
	@(cd QtMultimedia; $(MAKE) clean)
	@(cd QtNetwork; $(MAKE) clean)
	@(cd QtDBus; $(MAKE) clean)
	@(cd QtOpenGL; $(MAKE) clean)
	@(cd QtSql; $(MAKE) clean)
	@(cd QtSvg; $(MAKE) clean)
	@(cd QtTest; $(MAKE) clean)
	@(cd QtWebKit; $(MAKE) clean)
	@(cd QtXml; $(MAKE) clean)
	@(cd QtXmlPatterns; $(MAKE) clean)
	@(cd Qt; $(MAKE) clean)
	@(cd dbus; $(MAKE) clean)
	@(cd pyuic; $(MAKE) clean)
	@(cd pylupdate; $(MAKE) clean)
	@(cd pyrcc; $(MAKE) clean)
